# vim: filetype=muttrc
### Colorizing patch
color body brightblue default "^diff \-.*"
color body brightblue default "^index [a-f0-9].*"
color body brightblue default "^\-\-\- .*"
color body brightblue default "^[\+]{3} .*"
color body green default "^[\+][^\+]+.*"
color body red  default "^\-[^\-]+.*"
color body cyan default "^@@ [\-\+,0-9 ]+ @@"

# Uncolorize the - Log ------ entry
color body yellow default "^\- Log [\-]{65}"
color body yellow default "^\-[\-]{70}"
